<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/dark_gray" />
            <stroke android:width="1px" android:color="@color/white" />
            <size android:width="55dp" android:height="50dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/keyboard_dark_cell_bg_color" />
            <stroke android:width="1px" android:color="@color/white" />
            <size android:width="55dp" android:height="50dp"/>
        </shape>
    </item>

    <item>
        <bitmap android:src="@drawable/ic_del" android:gravity="center"/>
    </item>
</layer-list>